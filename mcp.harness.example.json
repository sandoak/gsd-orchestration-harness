{
  "mcpServers": {
    "mcp-sandbox": {
      "type": "http",
      "url": "http://YOUR_SANDBOX_HOST:3000/mcp"
    },
    "playwright": {
      "command": "npx",
      "args": ["-y", "@playwright/mcp@latest"]
    },
    "shadcn": {
      "command": "npx",
      "args": ["shadcn@latest", "mcp"]
    },
    "shadcn-studio-mcp": {
      "command": "npx",
      "args": ["-y", "shadcn-studio-mcp"],
      "env": {
        "API_KEY": "YOUR_API_KEY",
        "EMAIL": "YOUR_EMAIL"
      }
    },
    "gsd-harness": {
      "command": "node",
      "args": ["/path/to/.gsd-harness/packages/harness/dist/index.js"]
    }
  }
}
