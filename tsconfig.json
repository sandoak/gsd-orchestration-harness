{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    // Root-level paths for workspace packages
    "baseUrl": ".",
    "paths": {
      "@gsd/*": ["packages/*/src"]
    },

    // Root-level emit settings (for any root-level tooling)
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "packages", "**/*.test.ts", "**/*.spec.ts"],
  "references": [
    { "path": "./packages/core" },
    { "path": "./packages/session-manager" },
    { "path": "./packages/mcp-server" },
    { "path": "./packages/web-server" }
  ]
}
